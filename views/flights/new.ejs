<%- include("../partials/html-head") %> 

<%- include("../partials/nav") %> 

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline">Airline:
      <select name="airline">
        <option value="American Airlines">American</option>
        <option value="United Airlines">United</option>
        <option value="Southwest Airlines">Southwest</option>
      </select>
    </label><br>
    <label>Airport:
      <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </label><br>
    <label for="flight-input">flightNo
      <input type="number" name="flightNo">
    </label><br>
    <label>Departs:
      <input type="datetime-local" name="departs">
    </label><br>
    <button type="submit">Add Flight</button>
  </form>
</main>  

